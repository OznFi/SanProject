@using SanProject.Shared.BookingModels
@model ReservationDetailDTO
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div id="booking_details">
    <h3>Booking Complete</h3>
    <div>
        <h4>@Model.serviceDetails.hotelDetail.name</h4>
        <div>
            <div>
                <span>@(Model.serviceDetails.hotelDetail.country.name), @(Model.serviceDetails.hotelDetail.city.name)</span>
                <span>Address: @Model.serviceDetails.hotelDetail.address.address</span>
            </div>
            
            <span>@Model.serviceDetails.hotelDetail.location.name</span>
            <span>Phone: @(Model.serviceDetails.hotelDetail.phoneNumber)</span>
            <span>Fax: @(Model.serviceDetails.hotelDetail.faxNumber)</span>
            <a href=@Model.serviceDetails.hotelDetail.homePage>Website</a>
        </div>
        <div id="traveller_container">
            <h5>The Travellers</h5>
            @for(int i = 0; i < @Model.travellers.Count; i++)
            {
                <div>
                    <span>Name: @(Model.travellers[i].name)</span><br/>
                    <span>Surname: @(Model.travellers[i].surname)</span><br/>
                    <span>Nationality: @(Model.travellers[i].nationality.name)</span><br/>
                    <span>Traveller ID: @(Model.travellers[i].travellerId)</span><br/>
                </div>
            }
        </div>
        <div>
            <h5>Agency</h5>
            <span>Agency Name: @(Model.agency.name)</span><br/>
            <span>Agency Address: @(Model.agency.address.address)</span><br/>
            <span>Agency Name: @(Model.agencyUser.@operator.name)</span><br/>
        </div>


    </div>
</div>