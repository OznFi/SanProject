@model List<SanProject.Domain.User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Registry Date</th>
            <th>Active Status</th>
            <th>Deletion Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RegistryDate</td>
                <td>@user.IsActive</td>
                <td>@user.IsDeleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id=@user.Id >Edit</a>
                </td>
                <td>
                    <a asp-action="SoftDelete" asp-route-id=@user.Id >Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Registration">Add User</a>
</table>
