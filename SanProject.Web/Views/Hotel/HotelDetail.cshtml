@model SanProject.Shared.HotelModels.HotelDetailDTO
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div id="full_hotel_detaildiv">
    <div id="hotel_detaildiv">
    <h1>@Model.name</h1>
    <img src=@Model.thumbnail></img>
    <div class="Scores">
         @if (Model.stars > 0)
        {
            <span>@(Model.stars) stars</span>
        }
        @if (Model.rating > 0)
        {
            <span>@(Model.rating) Rating</span>
        }
    </div>
    <div class="locationinfo">
       <span class="hotel_detail_info_title">Address : </span><span>@Model.address</span>
    </div>
    <div>
        <span class="hotel_detail_info_title">Offer check-in : </span><span>@(Model.offerCheckIn.ToShortDateString())</span>
    </div>
    <div class="hotel_description">
        <span>@Model.description.text</span>
    </div>
    <div class="hotel_price">
        <span>@(Model.price.amount)</span><span class="currency_span"> @Model.price.currency</span>
    </div>
    <div class="make_reservation_anchor">
            <a asp-controller="Booking" asp-action="Index" asp-route-offid=@Model.offerId asp-route-currenc=@Model.price.currency asp-route-travnum=@Model.travellernum>Make Reservation</a>
    </div>
    </div>
</div>

