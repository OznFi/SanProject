@model List<SanProject.Domain.HotelObject>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Hotels</h1>


<table>
    <thead>
        <tr>
            <th>Hotel Name</th>
            <th>Hotel Id<th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.HotelName</td>
                <td>@hotel.HotelId</td>
                <td>
                    <a asp-controller="Hotel" asp-action="NumberofTravelers" asp-route-id="@hotel.HotelId">Details</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

