@using SanProject.Shared.HotelModels
@model List<HotelDetailDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Hotels</h1>



<div id="hotels_container">
    @foreach(var item in Model)
    {
        <div class="hotel_list_element">
        
            
                <div class="imgdiv">
                    <img src=@item.thumbnail></img>
                </div>
            
        
        <div>
        <h2>@item.name</h2>
            <h3>@item.HotelId</h3>
            <div class="Scores">
             @if (item.stars > 0)
            {
             <span>@(item.stars) stars</span>
            }
            @if (item.rating > 0)
            {
                <span>@(item.rating) Rating</span>
            }
          </div>
          <div class="locationinfo">
            <span class="hotel_detail_info_title">Address : </span><span>@item.address</span>
          </div>
       <a id="details_anchor" asp-action="AlternateHotelDetail" asp-route-hotelId="@item.HotelId" asp-route-numtrav="@item.travellernum", asp-route-checkinstr="@item.offerCheckIn.ToString("yyyy-MM-dd")">Details</a>
       </div>
          
       </div>
    }
</div>




